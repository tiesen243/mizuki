# Application settings
APP_NAME="Mizuki"
APP_DESCRIPTION="Mizuki is a lightweight, open-source blogging platform designed for simplicity and ease of use."
APP_ENV="development"
APP_URL="http://localhost:8000"

# CORS configuration
CORS_ALLOWED_ORIGINS="*"
CORS_ALLOWED_METHODS="GET,POST,OPTIONS"
CORS_ALLOWED_HEADERS="Content-Type,Authorization"
CORS_ALLOW_CREDENTIALS="true"

# Database connection
MYSQL_HOST="127.0.0.1"
MYSQL_PORT=3306
MYSQL_DATABASE="mizuki_db"
MYSQL_USER="mizuki"
MYSQL_PASSWORD=""
MYSQL_ROOT_PASSWORD=""
